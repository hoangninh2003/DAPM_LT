@model IEnumerable<DAPM_LT.Models.PhieuMuaChiTiet>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAd.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (Model.Any())
{


    <table class="table">
        <tr>
            <th>
                Mã sách
            </th>

            <th>
                Tên sách
            </th>
            <th>
                Ảnh thực trạng
            </th>
            <th>
                Tình trạng sách
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr style="text-align: center">

                <td>
                    @Html.DisplayFor(modelItem => item.Kiemsoat.Idkiemsoat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kiemsoat.Sach.Tieude)
                </td>
                <td>
                    <img src="~/Content/Image/@item.Kiemsoat.Imgtrangthai" style="height:20%; width:20%" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kiemsoat.Trangthaisach)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdPhieuMuaChiTiet }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdPhieuMuaChiTiet }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdPhieuMuaChiTiet })
                </td>
            </tr>
        }

    </table>
}
else
{
    <p> Sách này hiện không có.</p>
}
