@model DAPM_LT.Models.PhieuMua

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAd.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Phiếu Mua</h4>
        <section class="vh-100 gradient-custom">
            <div class="container py-5 h-100">
                <div class="row justify-content-center align-items-center h-100">
                    <div class="col-12 col-lg-9 col-xl-7">
                        <div class="card shadow-2-strong card-registration">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img3.webp"
                                 class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
                                 alt="Sample photo">
                            <div class="card-body p-4 p-md-5">
                                <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Mua sách</h3>

                                <form class="px-md-2">
                                    <div class="form-outline mb-4">
                                        <input type="text" placeholder="ID Thẻ" id="form3Example1q" class="form-control" />
                                    </div>
                                    <div class="form-outline mb-4">
                                        <select class="form-control">
                                            <option value="1">Thể loại </option>
                                            <option value="2">...</option>
                                            <option value="3">...</option>
                                        </select>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <input type="text" placeholder="Họ và tên" id="form3Example1q" class="form-control" />
                                    </div>
                                    <div style="display:flex;justify-content:left;margin-left:13px">
                                        <div class="row">
                                            <div class="form-outline mb-4" style="display:flex">
                                                <div>
                                                    <p>Ngày Mua</p>
                                                </div>
                                                <div class="form-outline datepicker" style="margin-left:7px">
                                                    <input type="date" class="form-control" id="exampleDatepicker1" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-success btn-lg mb-1" style="margin-left:400px">Create</button>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


