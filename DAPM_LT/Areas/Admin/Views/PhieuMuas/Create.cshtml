@model DAPM_LT.Models.PhieuMua

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAd.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <section class="vh-100 gradient-custom">
            <div class="container py-5 h-100">
                <div class="row justify-content-center align-items-center h-100">
                    <div class="col-12 col-lg-9 col-xl-7">
                        <div class="card shadow-2-strong card-registration">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img3.webp"
                                 class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
                                 alt="Sample photo">
                            <div class="card-body p-4 p-md-5">
                                <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Mua sách</h3>

                                <form class="px-md-2">
                                    <div class="form-outline mb-4">
                                        <input type="text" placeholder="Mã Tài Khoản" id="Idthe" class="form-control" name="Idtaikhoan" />
                                        @Html.ValidationMessageFor(model => model.Idtaikhoan, "", new { @class = "text-danger" })
                                    </div>
                                    <div style="display:flex;justify-content:space-evenly;">
                                        <div class="row">
                                            <div class="form-outline mb-4" style="display:flex">
                                                <div>
                                                    <p>Ngày Mua</p>
                                                </div>
                                                <div class="form-outline datepicker" style="margin-left:7px">
                                                    <input type="date" class="form-control" id="Ngaymuon" name="Ngaymua" />
                                                    @Html.ValidationMessageFor(model => model.Ngaymua, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                    <button type="submit" class="btn btn-success btn-lg mb-1" style="margin-left:400px">Xác nhận</button>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </div>

}
<div>
    @Html.Action("TKpartial", "HomeAd")
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
    function addSearchBox() {
        var searchContainer = document.getElementById("searchContainer");

        // Tạo div xóa và tìm
        var newSearchDiv = document.createElement("div");
        newSearchDiv.className = "form-outline mb-4";

        // Tạo xóa
        var deleteButton = document.createElement("button");
        deleteButton.type = "button";
        deleteButton.className = "btn btn-danger";
        deleteButton.innerHTML = "-";
        deleteButton.onclick = function () {
            searchContainer.removeChild(newSearchDiv);
        };

        // Tạo ô tìm
        var newSearchInput = document.createElement("input");  //chức năng tương tự ô gốc
        newSearchInput.type = "text";
        newSearchInput.placeholder = "Mã sách";
        newSearchInput.className = "form-control";

        // Thêm xóa và ô tìm vào div mới
        newSearchDiv.appendChild(deleteButton);
        newSearchDiv.appendChild(newSearchInput);

        // Thêm div mới vào container
        searchContainer.appendChild(newSearchDiv);
    }
</script>