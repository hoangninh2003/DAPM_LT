@model IEnumerable<DAPM_LT.Models.PhieuMua>

@{ ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAd.cshtml"; }

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">

<body>
    <div id="wrapper">
        <div id="page-wrapper">
            <div class="header">
                <h1 class="page-header">
                    Quản lí phiếu mua
                </h1>
                <div class="button-container">
                    <a class="btn btn-success" style="margin-right:auto" @Html.ActionLink("Create New", "Create")
                    </a>
                </div>
            </div>
            <div id="page-inner" style="margin-top:20px">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-action">
                            </div>
                            <div class="card-content">
                                <div class="table-responsive">
                                    <div class="form-outline mb-4">
                                        <input type="search" placeholder="Search" class="form-control" id="datatable-search-input">
                                    </div>
                                    <div id="datatable">
                                    </div>
                                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                        <thead>
                                            <tr>
                                                <th>@Html.DisplayNameFor(model => model.Idsach)</th>
                                                <th>@Html.DisplayNameFor(model => model.Ngaymua)</th>
                                                <th>  @Html.DisplayNameFor(model => model.TaiKhoan.Holot)</th>
                                            </tr>
                                        </thead>
                                        @foreach (var item in Model)
                                        {
                                            <tbody>
                                                <tr class="gradeC">
                                                    <td>@Html.DisplayNameFor(model => model.Idsach)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.Ngaymua)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.TaiKhoan.Holot)</td>
                                                </tr>
                                                <tr class="gradeU">
                                                    <td></td>
                                                    <td></td>
                                                    <td>-</td>
                                                    <td class="center">-</td>
                                                    <td class="center">U</td>
                                                </tr>
                                            </tbody>
}
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

