@model IEnumerable<DAPM_LT.Models.Loai>

@{
    ViewBag.Title = "Danh Sách Loại Sách";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAd.cshtml";
}

<div class="container">
    <h2>Danh Sách Loại Sách</h2>

    <div class="button-container">
        @Html.ActionLink("Thêm Loại Sách", "Create", null, new { @class = "btn btn-primary" })
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tên Loại</th>
                <th>Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Tenloai)</td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.Idloai }, new { @class = "btn btn-secondary btn-sm" })
                        @Html.ActionLink("Chi Tiết", "Details", new { id = item.Idloai }, new { @class = "btn btn-info btn-sm" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.Idloai }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .container {
        margin: 20px;
    }

    .button-container {
        margin-bottom: 20px;
    }

    .table th, .table td {
        text-align: center;
    }

    .btn-sm {
        padding: 5px 10px;
        font-size: 14px;
    }

    .btn-secondary, .btn-info, .btn-danger {
        margin-right: 5px;
    }
</style>