@model List<DAPM_LT.Models.Kiemsoat>


<table class="table fa-border">
    <tr>
        <th>
            Mã sách
        </th>

        <th>
            Hình ảnh
        </th>
        <th>
            Tên sách
        </th>
        <th>
            Hiện trạng
        </th>
        <th>
            Mượn/Còn
        </th>
        <th>

        </th>
    </tr>



    @foreach (var item in Model)
    {
        <tr style="text-align:center">
            <td>
                @Html.DisplayFor(modelItem => item.Idkiemsoat)
            </td>

            <td>
                <img src="~/Content/Image/@item.Imgtrangthai" style="height:20%; width:20%" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sach.Tieude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trangthaisach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Muontra)
            </td>
            <td style="text-align:center">
                <a href="@Url.Action("Edit", new { id = item.Idkiemsoat })" class="btn btn-primary" style="color: white;">
                    Sửa
                </a>
                <a href="@Url.Action("Delete", new { id = item.Idkiemsoat })" class="btn btn-danger" style="color: white;">
                    Xóa
                </a>
            </td>
        </tr>
    }

</table>