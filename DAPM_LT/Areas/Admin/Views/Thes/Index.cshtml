@model IEnumerable<DAPM_LT.Models.The>

@{
    ViewBag.Title = "Danh Sách Thẻ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAd.cshtml";
}

<div class="container">
    <h2>Danh Sách Thẻ</h2>

    <div class="button-container">
        @Html.ActionLink("Tạo Thẻ Mới", "Create", null, new { @class = "btn btn-primary" })
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ảnh</th>
                <th>ID Thẻ</th>
                <th>Ngày Mở Thẻ</th>
                <th>Trạng Thái Thẻ</th>
                <th>Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td><img src="~/Content/@item.TaiKhoan.ImgU" alt="Ảnh Đại Diện" class="profile-image" /></td>
                <td>@Html.DisplayFor(modelItem => item.Idthe)</td>
                <td>@Html.DisplayFor(modelItem => item.Ngaymothe)</td>
                @if (item.Trangthaithe == 1)
                {
                    <td>Thẻ còn hạn sử dụng</td>
                }
                else if (item.Trangthaithe == 1)
                {
                    <td>Thẻ đanng chờ gia hạn</td>
                }
                else
                {
                    <td>Thẻ không thể sử dụng</td>
                }


                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.Idthe }, new { @class = "btn btn-secondary btn-sm" })
                    @Html.ActionLink("Chi Tiết", "Details", new { id = item.Idthe }, new { @class = "btn btn-info btn-sm" })
                    @Html.ActionLink("Xóa", "Delete", new { id = item.Idthe }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>

            }
        </tbody>
    </table>
</div>
<style>
    .container {
        margin: 20px;
    }

    .button-container {
        margin-bottom: 20px;
    }

    .table th, .table td {
        text-align: center;
    }

    .btn-sm {
        padding: 5px 10px;
        font-size: 14px;
        margin-right: 5px;
    }
    .profile-image {
        max-width: 50px;
        height: auto;
        border-radius: 50%;
    }

</style>