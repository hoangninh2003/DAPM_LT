
@model DAPM_LT.Models.Sach

@{
    ViewBag.Title = "Chi tiết";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ var u = Session["use"] as DAPM_LT.Models.TaiKhoan; }
<!-- content -->
<section class="py-5">
    <div class="container" style="margin-top:100px;">
        <div class="row gx-5">
            <aside class="col-lg-6">

                <div class="d-flex justify-content-center mb-3">
                    <img src="~/Content@(Model.ImgSach)" height="75%" width="75%" />
                </div>
                <!-- thumbs-wrap.// -->
                <!-- gallery-wrap .end// -->
            </aside>
            <main class="col-lg-6">
                <div class="ps-lg-3">
                    <h1 class="title text-dark">
                        @Html.DisplayFor(model => model.Tieude)
                    </h1>
                    <div class="d-flex flex-row my-3">
                        <div class="text-warning mb-1 me-2">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fas fa-star-half-alt"></i>
                            <span class="ms-1">
                                Đánh giá: 4.5
                            </span>
                        </div>
                        <span class="text-muted"><i class="fas fa-shopping-basket fa-sm mx-1"></i>154 đơn đặt hàng</span>

                        <span class="text-success ms-2">Còn hàng</span>
                    </div>

                    <div class="mb-3">
                        <span class="h5">
                            @Html.DisplayFor(model => model.GiaMua)
                        </span>
                        <span class="text-muted">VNĐ</span>
                    </div>

                    <p>
                        @Html.DisplayFor(model => model.Mota)
                    </p>
                    <hr />

                    <div class="row mb-4">
                        <div class="col-md-4 col-6">
                            <label class="mb-2">Thể Loại</label>
                            <p>
                                @Html.DisplayFor(model => model.Loai.Tenloai)
                            </p>
                        </div>
                        <!-- col.// -->
                    </div>
                </div>
                <div style="margin-top:25px">
                    @if (u != null)
                    {
                        <form action="@Url.Action("Thanhtoan", "Home")" method="post">
                            <input type="hidden" name="idSach" value="@Model.Idsach" />
                            <button type="submit" class="btn btn-warning shadow-0"> Mua ngay</button>
                        </form>
                    }
                    else
                    {
                        <form action="@Url.Action("MuaSach", "Home")" method="post">
                            <input type="hidden" name="idSach" value="@Model.Idsach" />
                            <button type="submit" class="btn btn-warning shadow-0"> Mua ngay</button>
                        </form>
                    }

                    <br />
                    <a href="#" class="btn btn-primary shadow-0"> <i class="me-1 fa fa-shopping-basket"></i> Thêm vào giỏ hàng</a>

                    <a href="#" class="btn btn-light border border-secondary py-2 icon-hover px-3"> <i class="me-1 fa fa-heart fa-lg"></i> Save </a>
                </div>
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class="alert alert-success">
                        @ViewBag.Message
                    </div>
                }
        </div>
        </main>
    </div>
    </div>
</section>
<!-- content -->
