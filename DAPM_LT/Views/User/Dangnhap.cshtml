@model  DAPM_LT.Models.LoginModel

@{ ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_Layout.cshtml";}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Login</title>
    <link rel="stylesheet" href="~/Content/css/login.css" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body>

    <div class="login-container center-block">
        <h2>Đăng nhập</h2>
        @using (Html.BeginForm("Dangnhap", "User", FormMethod.Post))
        {
            <form>
                <div class="form-group">
                    <label for="inputPassword">Email</label>
                    @Html.EditorFor(model => model.userMail, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.userMail, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    <label for="inputPassword">Mật khẩu</label>
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { type = "Password", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    <a class="small" href="#">Quên mật khẩu?</a>
                    <input type="submit" value="Đăng nhập" class="btn btn-primary" />
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small"><a href="/User/Dangky">Chưa có tài khoản? Đăng ký!</a></div>
                </div>
            </form>}
        <br /><br />
    </div>
    <br /><br /><br />
</body>
</html>
