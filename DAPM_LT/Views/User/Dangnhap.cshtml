@model  DAPM_LT.Models.LoginModel

@{ ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="~/Content/css/login.css" />



}


<body>
    @if (ViewBag.RegOk != null)
    {
        <div class="alert alert-success">
            @ViewBag.RegOk
        </div>
    }
    <div class="login-container center-block" style="margin-top:150px">
        <h2>Đăng nhập</h2>
        @using (Html.BeginForm("Dangnhap", "User", FormMethod.Post))
        {

            <form>
                <div class="form-group">
                    <label for="inputPassword">Email</label>
                    @Html.EditorFor(model => model.userMail, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.userMail, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    <label for="inputPassword">Mật khẩu</label>
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { type = "Password", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    <a class="small" href="#">Quên mật khẩu?</a>
                    <input type="submit" value="Đăng nhập" class="btn btn-danger" />
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small"><a href="/User/Dangky">Chưa có tài khoản? Đăng ký!</a></div>
                </div>
            </form>}
        <br /><br />
    </div>
    <br /><br /><br />
</body>

